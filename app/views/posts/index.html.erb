<div ng-controller="PostsCtrl" class="row">
  <h1>{{heading}} <small>Ruby On Rails, Angularjs, and Bootstrap</small></h1>
  <blockquote>
    <p>Those who don't do, teach!</p>
    <small>Hammam Samara</small>
  </blockquote>

  <form ng-submit="create()" name="hello" role="form" class="col-md-8">
    <div class="form-group">
      <label for="title" class="control-label">Title</label>
      <input type="text" name="title" id="title" ng-model="newPost.title" class="form-control" placeholder="Enter title"/>
    </div>
    <div class="form-group">
      <label for="body" class="control-label">Body</label>
      <textarea name="body" id="body" ng-model="newPost.body" class="form-control" rows="3" placeholder="Wrtie your blog"></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">
      <span class="glyphicon glyphicon-ok"> Post</span>
    </button>
  </form>

  <div class="col-md-4">
    <h3>Old Posts <span class="badge">{{posts.length}}</span></h3>
    <div ng-repeat="post in posts" ng-animate=" 'animate' " class="panel panel-info">
      <h4 class="panel-heading">{{post.title|titleize}}</h4>
      <p class="panel-body">{{post.body}}</p>
    </div>
  </div>
</div>
